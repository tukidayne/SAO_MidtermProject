<section>
    <div class="container">
        {{#each order}}
        {{#if (eq status 'Processing')}}
        <h1 class="text-center">Processing Order</h1>
        <h1 class="text-center">Table: {{table}}</h1>
        {{/if}}
        {{/each}}
        <table class="table">
            <thead class="table-dark table-bordered">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Dish</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Mark</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{item.name}}</td>
                    <td>{{qty}}</td>
                    <td>
                        {{#if (eq status 'Processing')}}
                        <a href="/chef/mark-done/{{item._id}}">
                            <i class="fa-solid fa-square-check fa-xl" style=" color: green;"></i>
                        </a>
                        {{else}}
                            <span {{#if (eq status 'Done')}}style="color: green" {{else}} style="color: tomato" {{/if}}>{{status}}</span>                 
                        {{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                {{#with cart}}
                <tr>
                    <th scope="col">Total</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
                {{/with}}
            </tfoot>
        </table>

    </div>
</section>