                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        {{#if items}}
        <div class="container">
            <table class="table">
                <thead class="table-dark table-bordered">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Dish</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{item.name}}</td>
                        <td>{{price}}$</td>
                        <td>{{qty}}</td>
                        <td {{#if (eq status 'Processing' )}}style="color:Tomato" {{else}}style="color:green" {{/if}}>
                            {{status}}</td>
                        <td>
                            {{#unless (eq status 'Done')}}
                            <a href="/delete-item/{{item._id}}">
                                <i class="fa-solid fa-circle-minus fa-xl" style=" color: Tomato;"></i>
                            </a>
                            {{/unless}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th scope="col">Total</th>
                        <th scope="col"></th>
                        <th scope="col">{{totalPrice}}$</th>
                        <th scope="col">{{totalQty}}</th>
                        <th scope="col">
                            <button class="btn btn-success" type="button" data-bs-toggle="modal"
                                data-bs-target="#paymentModal">Checkout</button>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{/if}}
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
    <form action="/payment/{{orderID}}" method="post">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Payment Processing</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Please make sure that all information is carefully checked</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-danger" value="Confirm">
                </div>
            </div>
        </div>
    </form>
</div>